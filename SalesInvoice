	        for (InvoiceDetails item : items) {
	            sb.append(item.getProducts().getProductName()).append(" - ").append(item.getProducts().getPrice())
	                    .append(" x ").append(item.getQuantity()).append(" = ").append(item.getTotalPrice())
	                    .append("\n");
	        }
	        sb.append("Total amount: ").append(getTotalAmount());
