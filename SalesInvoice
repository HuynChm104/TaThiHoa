package Quanly;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

public class SalesInvoice {
	
		private List<InvoiceDetails> items;
	    private Date invoiceDate;

	    public SalesInvoice() {
	        this.items = new ArrayList<>();
	        this.invoiceDate = new Date(); // Đặt ngày hóa đơn là ngày giờ hiẹn tại
	    }

	    public void addItem(InvoiceDetails item) {
	        items.add(item);
	    }

	    public double getTotalAmount() { //Tổng số lượng cua loại hàng
	        double total = 0;
	        for (InvoiceDetails item : items) {
	            total += item.getTotalPrice();
	        }
	        return total;
	    }

